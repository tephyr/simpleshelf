{
  "apps" : [{
    "name"        : "simpleshelf",
    "script"      : "./server.js",
    "watch"       : ["./server.js", "./serverSetup.js"],
    "out_file"    : "/var/log/pm2/pm2.log",
    "error_file"  : "/var/log/pm2/pm2.log",
    "env": {
      "NODE_CONFIG_DIR": "/opt/simpleshelf/config",
      "NODE_CONFIG_DIR_HOST": "/opt/simpleshelf/config-host"
    },
    "min_uptime": 3000,
    "max_restarts": 3,
    "autorestart": false
  }]
}
